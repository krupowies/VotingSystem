<Window x:Class="VotingWPF.Views.CreateDesView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VotingWPF.Views"
        mc:Ignorable="d"
        Title="CreateDesView" Height="450" Width="800">
    <Grid>
        <Label Content="Write something about you" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="40" FontSize="16" Height="36" Width="220"/>
        <TextBox Name="descriptiontxt" Background="Gray" Foreground="White" FontSize="40" Height="200" Width="600"/>
        <Button x:Name="ConfirmButton" Click="ConfirmButton_Click" Margin="500 350 20 20" FontSize="20" FontWeight="Bold" Content="Enter" Width="150" Height="30" Background="MediumSpringGreen" />
        <Button x:Name="GoBackButton" Click="GoBackButton_Click" Margin="20 350 500 20" FontSize="20" FontWeight="Bold" Content="Go back" Width="150" Height="30" Background="MediumSpringGreen" />
    </Grid>
    
</Window>
